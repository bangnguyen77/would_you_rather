
<%= form_for @question, remote: true do |f| %>
<%= render "layouts/errors", :object => @question %>
  <%= f.label :statement %>
  <%= f.text_field :statement %><br>
  <%= f.label :answer1, "either" %>
  <%= f.text_field :answer1 %><br>
  <%= f.label :answer2, "or" %>
  <%= f.text_field :answer2 %>
  <%= f.submit %>
<% end %>
